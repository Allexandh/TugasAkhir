<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyprofileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/fotouser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/trump"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.08" />

        <TextView
            android:id="@+id/namauser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"

            android:text="Carlos Ward"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/fotouser"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="47dp" />


        <TextView
            android:id="@+id/jumlahreviews"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="8dp"
            android:text="5"

            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/review"
            app:layout_constraintLeft_toRightOf="@+id/fotouser"
            app:layout_constraintTop_toBottomOf="@+id/namauser"
            app:layout_constraintVertical_bias="0.894"

            />

        <TextView
            android:id="@+id/jumlahphotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"
            android:text="2"

            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/photo"
            app:layout_constraintRight_toRightOf="parent"


            app:layout_constraintTop_toBottomOf="@+id/namauser"
            app:layout_constraintVertical_bias="0.629" />

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="REVIEWS"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintLeft_toRightOf="@+id/fotouser"
            app:layout_constraintRight_toLeftOf="@id/photo"
            app:layout_constraintTop_toBottomOf="@id/namauser" />

        <TextView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="PHOTOS"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.798"

            app:layout_constraintLeft_toRightOf="@+id/review"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/namauser" />

        <TextView
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="REVIEWS"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/fotouser"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <ListView
            android:id="@+id/listreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/review"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>